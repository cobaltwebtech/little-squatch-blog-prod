{
	"name": "littlesquatchblog",
	"type": "module",
	"version": "1.0.0",
	"description": "The Little Squatch blog built with Astro",
	"author": "cobaltwebtech",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/cobaltwebtech/little-squatch-blog-prod"
	},
	"bugs": {
		"url": "https://github.com/cobaltwebtech/little-squatch-blog-prod/issues"
	},
	"scripts": {
		"dev": "npx tinacms dev -c \"astro dev\"",
		"prebuild": "node scripts/replaceAssetPaths.js",
		"start": "astro dev",
		"build": "astro build",
		"update": "yarn dlx @astrojs/upgrade",
		"sync": "astro sync",
		"preview": "astro preview",
		"postbuild": "pagefind --site dist",
		"format:check": "prettier --plugin-search-dir=. --check .",
		"format": "prettier --plugin-search-dir=. --write .",
		"lint": "eslint .",
		"pre-commit": "lint-staged",
		"prepare": "husky install",
		"clean": "rimraf dist .astro node_modules yarn.lock .yarn .netlify"
	},
	"dependencies": {
		"@astrojs/mdx": "4.0.7",
		"@astrojs/rss": "4.0.11",
		"@astrojs/tailwind": "5.1.5",
		"@preline/collapse": "^2.6.0",
		"@preline/overlay": "^2.6.0",
		"astro": "5.2.3",
		"astro-font": "^0.1.81",
		"lenis": "^1.1.20",
		"micromodal": "^0.4.10",
		"preline": "2.7.0",
		"tailwind-merge": "^2.6.0",
		"tailwindcss": "^3.4.17",
		"tiny-invariant": "^1.3.3"
	},
	"devDependencies": {
		"@astrojs/sitemap": "^3.2.1",
		"@iconify-json/solar": "^1.2.2",
		"@pagefind/default-ui": "^1.3.0",
		"@tailwindcss/typography": "0.5.16",
		"@tinacms/cli": "^1.8.1",
		"@types/micromodal": "^0.3.5",
		"@typescript-eslint/parser": "^8.21.0",
		"astro-icon": "^1.1.5",
		"clsx": "2.1.1",
		"eslint": "^9.19.0",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.2",
		"mdast-util-to-string": "^4.0.0",
		"motion": "^12.0.5",
		"pagefind": "^1.3.0",
		"photoswipe": "^5.4.4",
		"prettier": "^3.4.2",
		"prettier-config-standard": "^7.0.0",
		"prettier-plugin-astro": "^0.14.1",
		"reading-time": "^1.5.0",
		"rimraf": "^6.0.1",
		"sass": "^1.83.4",
		"slugify": "^1.6.6",
		"tinacms": "^2.6.1",
		"typescript": "^5.7.3"
	},
	"lint-staged": {
		"*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
			"prettier --write --plugin-search-dir=."
		]
	}
}
