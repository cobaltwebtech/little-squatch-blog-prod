{
  "name": "littlesquatchblog",
  "type": "module",
  "version": "1.2.0",
  "description": "The Little Squatch blog built with Astro",
  "author": "cobaltwebtech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cobaltwebtech/little-squatch-blog-prod",
    "private": true
  },
  "bugs": {
    "url": "https://github.com/cobaltwebtech/little-squatch-blog-prod/issues"
  },
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "up:astro": "pnpx @astrojs/upgrade",
    "sync": "astro sync",
    "preview": "astro preview",
    "format:check": "prettier . --check .",
    "format": "prettier . --write",
    "lint": "eslint .",
    "pre-commit": "lint-staged",
    "clean": "rimraf dist .astro node_modules yarn.lock pnpm-lock.yaml .yarn .netlify"
  },
  "dependencies": {
    "@astrojs/mdx": "4.3.11",
    "@astrojs/rss": "^4.0.13",
    "@astrojs/sitemap": "3.6.0",
    "@playform/compress": "^0.2.0",
    "@tailwindcss/vite": "^4.1.17",
    "astro": "5.15.9",
    "astro-compressor": "^1.2.0",
    "astro-font": "^1.1.0",
    "lenis": "^1.3.15",
    "photoswipe": "^5.4.4",
    "preline": "^3.2.3",
    "reading-time": "^1.5.0",
    "slugify": "^1.6.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@iconify-json/solar": "^1.2.5",
    "@pagefind/default-ui": "^1.4.0",
    "@tailwindcss/typography": "^0.5.19",
    "@typescript-eslint/parser": "^8.47.0",
    "astro-icon": "^1.1.5",
    "clsx": "^2.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "mdast-util-to-string": "^4.0.0",
    "motion": "^12.23.24",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  },
  "lint-staged": {
    "*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
      "prettier --write --plugin-search-dir=."
    ]
  }
}
