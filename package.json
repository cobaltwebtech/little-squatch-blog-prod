{
	"name": "littlesquatchblog",
	"type": "module",
	"version": "0.1.3",
	"description": "The Little Squatch blog built with Astro",
	"author": "cobaltwebtech",
	"license": "GPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "https://github.com/cobaltwebtech/little-squatch-blog-prod"
	},
	"keywords": [
		"astro",
		"astrojs",
		"astro-template",
		"astro-blog",
		"astro-b"
	],
	"bugs": {
		"url": "https://github.com/cobaltwebtech/little-squatch-blog-prod/issues"
	},
	"scripts": {
		"dev": "npx tinacms dev -c \"astro dev\"",
		"prebuild": "node scripts/replaceAssetPaths.js",
		"start": "astro dev",
		"build": "astro build",
		"update": "yarn dlx @astrojs/upgrade",
		"sync": "astro sync",
		"preview": "astro preview",
		"postbuild": "pagefind --site dist",
		"format:check": "prettier --plugin-search-dir=. --check .",
		"format": "prettier --plugin-search-dir=. --write .",
		"lint": "eslint .",
		"pre-commit": "lint-staged",
		"prepare": "husky install",
		"clean": "rimraf dist .astro node_modules yarn.lock .yarn"
	},
	"dependencies": {
		"@astrojs/rss": "4.0.9",
		"@julian_cataldo/astro-lightbox": "^0.10.11",
		"astro": "4.16.14",
		"astro-font": "^0.1.81",
		"lenis": "^1.1.17"
	},
	"devDependencies": {
		"@astrojs/mdx": "^3.1.9",
		"@astrojs/sitemap": "^3.2.1",
		"@astrojs/tailwind": "^5.1.2",
		"@pagefind/default-ui": "^1.2.0",
		"@tailwindcss/typography": "0.5.15",
		"@tinacms/cli": "^1.6.12",
		"@typescript-eslint/parser": "^8.17.0",
		"clsx": "2.1.1",
		"eslint": "^9.15.0",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"mdast-util-to-string": "^4.0.0",
		"motion": "^11.11.17",
		"pagefind": "^1.2.0",
		"prettier": "^3.3.3",
		"prettier-config-standard": "^7.0.0",
		"prettier-plugin-astro": "^0.14.1",
		"reading-time": "^1.5.0",
		"rimraf": "^6.0.1",
		"sass": "^1.81.0",
		"slugify": "^1.6.6",
		"tailwind-merge": "^2.5.5",
		"tailwindcss": "^3.4.15",
		"tinacms": "^2.5.0",
		"typescript": "^5.7.2"
	},
	"lint-staged": {
		"*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
			"prettier --write --plugin-search-dir=."
		]
	}
}
