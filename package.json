{
  "name": "littlesquatchblog",
  "type": "module",
  "version": "1.1.2",
  "description": "The Little Squatch blog built with Astro",
  "author": "cobaltwebtech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cobaltwebtech/little-squatch-blog-prod"
  },
  "bugs": {
    "url": "https://github.com/cobaltwebtech/little-squatch-blog-prod/issues"
  },
  "scripts": {
    "dev": "npx tinacms dev -c \"astro dev\"",
    "prebuild": "node scripts/replaceAssetPaths.js",
    "start": "astro dev",
    "build": "astro build",
    "update": "yarn dlx @astrojs/upgrade",
    "sync": "astro sync",
    "preview": "astro preview",
    "postbuild": "pagefind --site dist",
    "format:check": "prettier . --check .",
    "format": "prettier . --write",
    "lint": "eslint .",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "clean": "rimraf dist .astro node_modules yarn.lock pnpm-lock.yaml .yarn .netlify"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.1.0",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.2.1",
    "@playform/compress": "^0.1.7",
    "@tailwindcss/vite": "^4.0.9",
    "astro": "5.4.2",
    "astro-compressor": "^1.0.0",
    "astro-font": "^1.0.0",
    "lenis": "^1.2.3",
    "photoswipe": "^5.4.4",
    "preline": "^3.0.0",
    "reading-time": "^1.5.0",
    "slugify": "^1.6.6",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.9",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@iconify-json/solar": "^1.2.2",
    "@pagefind/default-ui": "^1.3.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tinacms/cli": "^1.9.2",
    "@typescript-eslint/parser": "^8.26.0",
    "astro-icon": "^1.1.5",
    "clsx": "^2.1.1",
    "eslint": "^9.21.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "mdast-util-to-string": "^4.0.0",
    "motion": "^12.4.10",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "tinacms": "^2.7.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "lint-staged": {
    "*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
      "prettier --write --plugin-search-dir=."
    ]
  }
}
