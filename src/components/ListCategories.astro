---
import { getCategories } from "@/utils";
import Category from "@/components/Category";
const categories = await getCategories();

const { activeCategory } = Astro.props;
---

<section class="py-3 text-sm">
  <p
    class="mb-4 text-center text-xl font-semibold text-wrap text-black dark:text-white"
  >
    Blog Categories
  </p>
  <nav
    class="mx-auto flex w-full flex-wrap items-center justify-center gap-4 px-4 text-center text-xs sm:gap-6 sm:text-lg"
  >
    <Category />
    {
      categories.map((category: string) => (
        <Category name={category} activeCategory={activeCategory} />
      ))
    }
  </nav>
</section>
