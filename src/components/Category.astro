---
import { cn, sluglify } from "@/utils";

const { name = "View All", activeCategory } = Astro.props;
const currentPath = Astro.url.pathname;
const unsluglifyNameCategory = sluglify(name.toLowerCase());

const isActive =
  activeCategory?.toLocaleLowerCase() === unsluglifyNameCategory ||
  (currentPath === "/" && name === "View All");
---

<a
  href={name === "View All"
    ? "/"
    : sluglify(`/category/${unsluglifyNameCategory}/1`)}
  class={cn(
    `rounded-full px-4 py-2 font-medium text-slate-700 dark:text-slate-200 focus:outline-none bg-slate-300 dark:bg-slate-700`,
    isActive &&
      `font-semibold text-orange-600 dark:text-orange-400 focus:outline-none bg-orange-100 dark:bg-cyan-800`,
  )}
>
  {name}
</a>
