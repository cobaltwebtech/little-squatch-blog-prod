---
import { Icon } from "astro-icon/components";

export interface Props {
  buttonLink: string;
  buttonText: string;
  iconName: string;
  ariaLabel?: string;
}

const { buttonLink, buttonText, iconName, ariaLabel } = Astro.props;
---

<button
  type="button"
  class="group rounded-4xl bg-cyan-800 dark:bg-cyan-700 w-max"
  aria-label={ariaLabel}
>
  <a
    href={buttonLink}
    class="flex items-center justify-center gap-3 px-4 py-2 transition-transform duration-150 ease-in-out hover:translate-x-1"
  >
    <Icon
      name={iconName}
      class="size-8 text-white transition-transform duration-250 ease-in-out group-hover:rotate-45"
    />
    <span class="font-semibold text-white">{buttonText}</span>
  </a>
</button>
